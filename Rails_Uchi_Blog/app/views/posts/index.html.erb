<h2 class="pb-2 border-bottom">Статьи</h2>
<% if user_signed_in? %>
  <%= link_to 'Добавить', new_post_path, class: "btn btn-info" %>
<% end %>
<div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
<% @posts.each do |post| %>
  <div class="feature col">
    <h2><%= post.title %></h2>
    <p><%= post.body %></p>
    <%= link_to 'Подробнее', post_path(post) %>  
  </div>
<% end %>
</div>
